{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Digitized Audio Grooved Disc Schema",
  "$id": "digitized_audiogrooveddisc",
  "description": "Definitions for audio grooved disc fields",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "asset",
    "bibliographic",
    "technical",
    "source",
    "digitizationProcess",
    "digitizer"
  ],
  "properties": {
    "asset": { "$ref": "fields#asset" },
    "bibliographic": { "$ref": "fields#bibliographic" },
    "technical": {
      "$id": "technical",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "filename",
        "extension",
        "dateCreated",
        "fileFormat",
        "audioCodec",
        "fileSize",
        "durationMilli",
        "durationHuman"
      ],
      "properties": {
        "filename": {
          "$ref": "fields#technicalFilename"
        },
        "extension": {
          "$ref": "fields#technicalExtensionForAudio"
        },
        "dateCreated": {
          "$ref": "fields#technicalDateCreated"
        },
        "fileFormat": {
          "$ref": "fields#technicalFileFormatForAudio"
        },
        "audioCodec": {
          "$ref": "fields#technicalAudioCodecForAudio"
        },
        "fileSize": {
          "$ref": "fields#technicalFileSize"
        },
        "durationMilli": {
          "$ref": "fields#technicalDurationMilli"
        },
        "durationHuman": {
          "$ref": "fields#technicalDurationHuman"
        },
        "signalNotes": {
          "$ref": "fields#technicalSignalNotes"
        }
      }
    },
    "source": {
      "$id": "source",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "object",
        "subObject",
        "physicalDescription",
        "audioRecording"
      ],
      "properties": {
        "object": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "format",
            "volumeNumber"
          ],
          "properties": {
            "type": {
              "enum": [ "audio grooved disc" ]
            },
            "format": {
              "enum": [
                "disc, Edison Diamond Disc",
                "disc, Edison Voicewriter",
                "disc, flexible",
                "disc, gelatin",
                "disc, lacquer, glass base",
                "disc, lacquer, metal base",
                "disc, lacquer, paper base",
                "disc, metal",
                "disc, metal master",
                "disc, other",
                "disc, shellac",
                "disc, vinyl",
                "disc, Gray Audograph"
              ]
            },
            "generation": {
              "type": "string"
            },
            "volumeNumber": {
              "type": "number",
              "multipleOf": 1.0,
              "minimum": 1
            }
          }
        },
        "subObject": {
          "$ref": "fields#subObjectWithoutStreams"
        },
        "physicalDescription": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "stockManufacturer",
            "diameter",
            "surfaceMaterial",
            "baseMaterial",
            "grooveWidth",
            "grooveOrientation"
          ],
          "properties": {
            "stockManufacturer": {
              "type": "string"
            },
            "stockProductID": {
              "type": "string"
            },
            "diameter": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    5.5,
                    6,
                    7,
                    10,
                    10.75,
                    12,
                    16,
                    17.5,
                    20
                  ]
                },
                "unit": {
                  "enum": [
                    "in"
                  ]
                }
              }
            },
            "baseMaterial": {
              "enum": [
                "shellac",
                "vinyl",
                "aluminum",
                "glass",
                "paper",
                "nickel-plated copper",
                "zinc",
                "wood",
                "unknown metal"
              ]
            },
            "surfaceMaterial": {
              "enum": [
                "cellulose acetate",
                "cellulose nitrate",
                "celluloid",
                "gelatin",
                "vinyl",
                "none",
                "unknown"
              ]
            },
            "grooveOrientation": {
              "enum": [
                "lateral",
                "vertical"
              ]
            },
            "grooveWidth": {
              "enum": [
                "coarse",
                "microgroove"
              ]
            }
          }
        },
        "audioRecording": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "audioSoundField",
            "designatedSpeed"
          ],
          "properties": {
            "audioSoundField": {
              "enum": [
                "stereo",
                "mono",
                "quadrophonic",
                "binaural",
                "unknown"
              ]
            },
            "designatedSpeed": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    33,
                    45,
                    70,
                    71.29,
                    76.59,
                    78.26,
                    80,
                    "unknown"
                  ]
                },
                "unit": {
                  "enum": [
                    "rpm"
                  ]
                }
              }
            }
          }
        },
        "notes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "physicalConditionPreShipNotes": {
              "type": "string"
            },
            "physicalConditionDigitizationNotes": {
              "type": "string"
            }
          }
        }
      }
    },
    "digitizationProcess" : {
      "$id": "digitizationProcess",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "playbackDevice",
        "phonoPreamp",
        "analogDigitalConverter",
        "captureSoftware"
      ],
      "properties": {
        "playbackDevice": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model",
            "speed",
            "groovedWallPlayback",
            "phonoArm",
            "phonoCartridge"
          ],
          "properties": {
            "serialNumber": {
              "$ref": "fields#playbackDeviceSerialNumber"
            },
            "manufacturer": {
              "$ref": "fields#playbackDeviceManufacturer"
            },
            "model": {
              "$ref": "fields#playbackDeviceModel"
            },
            "speed": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    33,
                    45,
                    70,
                    71.29,
                    76.59,
                    78.26,
                    80
                  ]
                },
                "unit": {
                  "enum": [
                    "rpm"
                  ]
                }
              }
            },
            "groovedWallPlayback": {
              "$ref": "fields#groovedWallPlayback"
            },
            "phonoCartridge": {
              "$ref": "fields#phonoCartridge"
            },
            "phonoArm": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "serialNumber",
                "manufacturer",
                "model",
                "trackingWeight"
              ],
              "properties": {
                "serialNumber": {
                  "type": "string"
                },
                "manufacturer": {
                  "type": "string"
                },
                "model": {
                  "type": "string"
                },
                "trackingWeight": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": [
                    "measure",
                    "unit"
                  ],
                  "properties": {
                    "measure": {
                      "type": "number"
                    },
                    "unit": {
                      "enum": [
                        "g"
                      ]
                    }
                  }
                }
              }
            }
          }
        },
        "phonoPreamp": {
          "$ref": "fields#phonoPreamp"
        },
        "analogDigitalConverter": {
          "$ref": "fields#analogDigitalConverter"
        },
        "captureSoftware": {
          "$ref": "fields#captureSoftware"
        },
        "takeNumber": {
          "$ref": "fields#takeNumber"
        },
        "notes": {
          "$ref": "fields#processNotes"
        }
      }
    },
    "digitizer": { "$ref": "fields#digitizer" }
  }
}
