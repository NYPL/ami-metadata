{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Digitized Video Reel Schema",
  "id": "digitized_videoreel",
  "description": "Definitions for video reel fields",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "asset",
    "bibliographic",
    "technical",
    "source",
    "digitizationProcess",
    "digitizer"
  ],
  "properties": {
    "asset": { "$ref": "fields#asset" },
    "bibliographic": { "$ref": "fields#bibliographic" },
    "technical": {
      "id": "technical",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "filename",
        "extension",
        "dateCreated",
        "fileFormat",
        "audioCodec",
        "videoCodec",
        "fileSize",
        "durationMilli",
        "durationHuman"
      ],
      "properties": {
        "filename": {
          "$ref": "fields#technicalFilename"
        },
        "extension": {
          "$ref": "fields#technicalExtensionForVideo"
        },
        "dateCreated": {
          "$ref": "fields#technicalDateCreated"
        },
        "fileFormat": {
          "$ref": "fields#technicalFileFormat"
        },
        "audioCodec": {
          "$ref": "fields#technicalAudioCodecForVideo"
        },
        "videoCodec": {
          "$ref": "fields#technicalVideoCodecForVideo"
        },
        "fileSize": {
          "$ref": "fields#technicalFileSize"
        },
        "durationMilli": {
          "$ref": "fields#technicalDurationMilli"
        },
        "durationHuman": {
          "$ref": "fields#technicalDurationHuman"
        },
        "signalNotes": {
          "$ref": "fields#technicalSignalNotes"
        }
      }
    },
    "source": {
      "id": "source",
      "type": "object",
      "additionalProperties": true,
      "required": [
        "object",
        "physicalDescription",
        "contentSpecifications",
        "audioRecording"
      ],
      "properties": {
        "object": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "format",
            "volumeNumber"
          ],
          "properties": {
            "type": {
              "enum": [ "film" ]
            },
            "format": {
              "enum": [
                "Regular 8mm",
                "Super 8mm",
                "Single 8mm",
                "Straight 8",
                "9.5mm",
                "16mm",
                "35mm"
              ]
            },
            "generation": {
              "type": "string"
            },
            "volumeNumber": {
              "type": "number",
              "multipleOf": 1.0,
              "minimum": 1
            }
          }
        },
        "subObject": {
          "$ref": "fields#subObjectWithoutStreams"
        },
        "physicalDescription": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "baseMaterial",
            "diameter",
            "length",
            "shrinkage"
          ],
          "properties": {
            "baseMaterial": {
              "enum": [
                "acetate",
                "polyester",
                "acetate and polyester",
                "nitrate"
              ]
            },
            "diameter": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    3,
                    4,
                    5,
                    6,
                    7,
                    10.5,
                    12.5,
                    16
                  ]
                },
                "unit": {
                  "enum": [
                    "in"
                  ]
                }
              }
            },
            "length": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "type": "number",
                  "multipleOf": 1.0,
                  "minimum": 1
                },
                "unit": {
                  "enum": [
                    "ft"
                  ]
                }
              }
            },
            "oxideMaterial": {
              "enum": [
                "ferric oxide",
                "chromium dioxide",
                "metal oxide"
              ]
            },
            "shrinkage": {
              "type": "string",
              "pattern": "^\\d{2}%$"
            },
            "stockManufacturer": {
              "type": "string"
            },
            "stockProductID": {
              "type": "string"
            }
          }
        },
        "contentSpecifications": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "colorBW",
            "displayAspectRatio",
            "frameRate",
            "print"
          ],
          "properties": {
            "colorBW": {
              "enum": [
                "b/w",
                "color",
                "color & b/w",
                "color tinted"
              ]
            },
            "displayAspectRatio": {
              "enum": [
                "1.33:1",
                "1.37:1",
                "1.85:1",
                "2.39:1"
              ]
            },
            "frameRate": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "type": "number",
                  "multipleOf": 0.5,
                  "minimum": 0
                },
                "unit": {
                  "enum": [
                    "fps"
                  ]
                }
              }
            },
            "print": {
              "enum": [
                "positive",
                "negative"
              ]
            }
          }
        },
        "audioRecording": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "audioAspect",
            "audioSoundField",
            "numberOfAudioTracks"
          ],
          "properties": {
            "audioAspect": {
              "enum": [
                "variable density optical",
                "single variable area optical",
                "dual variable area optical",
                "magnetic",
                "none"
              ]
            },
            "audioSoundField": {
              "$ref": "fields#audioSoundFieldForVideo"
            },
            "designatedNoiseReduction": {
              "enum": [
                ""
              ]
            },
            "numberOfAudioTracks": {
              "type": "number",
              "multipleOf": 1.0,
              "minimum": 0
            },
            "syncTone": {
              "enum": [
                ""
              ]
            }
          }
        },
        "notes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "physicalConditionPreShipNotes": {
              "type": "string"
            },
            "physicalConditionDigitizationNotes": {
              "type": "string"
            }
          }
        }
      }
    },
    "digitizationProcess" : {
      "id": "digitizationProcess",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "playbackDevice",
        "timeBaseCorrector",
        "captureSoftware"
      ],
      "properties": {
        "playbackDevice": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model"
          ],
          "properties": {
            "serialNumber": {
              "$ref": "fields#playbackDeviceSerialNumber"
            },
            "manufacturer": {
              "$ref": "fields#playbackDeviceManufacturer"
            },
            "model": {
              "$ref": "fields#playbackDeviceModel"
            }
          }
        },
        "timeBaseCorrector": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model"
          ],
          "properties": {
            "serialNumber": {
              "$ref": "fields#timeBaseCorrectorSerialNumber"
            },
            "manufacturer": {
              "$ref": "fields#timeBaseCorrectorManufacturer"
            },
            "model": {
              "$ref": "fields#timeBaseCorrectorModel"
            }
          }
        },
        "analogDigitalConverter": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model"
          ],
          "properties": {
            "serialNumber": {
              "$ref": "fields#analogDigitalConverterSerialNumber"
            },
            "manufacturer": {
              "$ref": "fields#analogDigitalConverterManufacturer"
            },
            "model": {
              "$ref": "fields#analogDigitalConverterModel"
            }
          }
        },
        "captureSoftware": {
          "$ref": "fields#captureSoftware"
        },
        "takeNumber": {
          "$ref": "fields#takeNumber"
        },
        "notes": {
          "$ref": "fields#processNotes"
        }
      }
    },
    "digitizer": { "$ref": "fields#digitizer" }
  }
}
