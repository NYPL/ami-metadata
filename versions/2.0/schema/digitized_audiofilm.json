{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Digitized Analog Audio Reel Schema",
  "$id": "digitized_audiofilm",
  "description": "Definitions for analog audio reel fields",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "asset",
    "bibliographic",
    "technical",
    "source",
    "digitizationProcess",
    "digitizer"
  ],
  "properties": {
    "asset": { "$ref": "fields#asset" },
    "bibliographic": { "$ref": "fields#bibliographic" },
    "technical": {
      "$id": "technical",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "filename",
        "extension",
        "dateCreated",
        "fileFormat",
        "audioCodec",
        "fileSize",
        "durationMilli",
        "durationHuman"
      ],
      "properties": {
        "filename": {
          "$ref": "fields#technicalFilename"
        },
        "extension": {
          "$ref": "fields#technicalExtensionForAudio"
        },
        "dateCreated": {
          "$ref": "fields#technicalDateCreated"
        },
        "fileFormat": {
          "$ref": "fields#technicalFileFormatForAudio"
        },
        "audioCodec": {
          "$ref": "fields#technicalAudioCodecForAudio"
        },
        "fileSize": {
          "$ref": "fields#technicalFileSize"
        },
        "durationMilli": {
          "$ref": "fields#technicalDurationMilli"
        },
        "durationHuman": {
          "$ref": "fields#technicalDurationHuman"
        },
        "signalNotes": {
          "$ref": "fields#technicalSignalNotes"
        }
      }
    },
    "source": {
      "$id": "source",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "object",
        "subObject",
        "physicalDescription",
        "audioRecording"
      ],
      "properties": {
        "object": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "format",
            "volumeNumber",
            "filmElement"
          ],
          "properties": {
            "type": {
              "enum": [ "film" ]
            },
            "format": {
              "enum": [
                "16mm film, optical track",
                "16mm film, full-coat magnetic sound",
                "35mm film, optical track",
                "35mm film, full-coat magnetic sound"
              ]
            },
            "filmElement": {
              "enum": [
                "audio out-takes",
                "mixed audio track and positive",
                "audio track"
              ]
            },
            "volumeNumber": {
              "type": "number",
              "multipleOf": 1.0,
              "minimum": 1
            }
          }
        },
        "subObject": {
          "$ref": "fields#subObjectWithStreams"
        },
        "physicalDescription": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "baseMaterial",
            "length"
          ],
          "properties": {
            "length": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "type": "number",
                  "multipleOf": 1.0,
                  "minimum": 1
                },
                "unit": {
                  "enum": [
                    "ft"
                  ]
                }
              }
            },
            "stockManufacturer": {
              "type": "string"
            },
            "edgeCode": {
              "type": "string",
              "pattern": "(19|20)\\d\\d"
            },
            "shrinkage": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "type": "number",
                  "minimum": -1.0
                },
                "unit": {
                  "enum": [
                    "%"
                  ]
                }
              }
            },
            "conditionScratches": {
              "enum": [
                0,
                1,
                2,
                3
              ]
            },
            "conditionSplices": {
              "enum": [
                0,
                1,
                2,
                3
              ]
            },
            "conditionPerforationDamage": {
              "enum": [
                0,
                1,
                2,
                3
              ]
            },
            "conditionDistortion": {
              "enum": [
                0,
                1,
                2,
                3
              ]
            },
              "emulsionPosition": {
                "enum": [
                  "emulsion in",
                  "emulsion out",
                  "mixed emulsion positions"
                ]
            },
            "baseMaterial": {
              "enum": [
                "acetate",
                "polyester",
                "acetate and polyester",
                "unknown"
              ]
            }
          }
        },
        "audioRecording": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "audioFormat",
            "audioSoundField",
            "numberOfAudioTracks"
          ],
          "properties": {
            "audioFormat": {
              "enum": [
                "variable density optical",
                "single variable area optical",
                "dual variable area optical",
                "magnetic",
                "Sony Dynamic Digital Sound",
                "Dolby Digital",
                "DTS"
              ]
            },
            "audioSoundField": {
              "enum": [
                "stereo",
                "mono",
                "surround",
                "quadrophonic",
                "binaural",
                "multi-track",
                "Ch1: Mono; Ch2: Sync Tone",
                "Ch1: Mono; Ch2: Silent"
              ]
            },
            "numberOfAudioTracks": {
              "enum": [
                1,
                2,
                3,
                4,
                6,
                8
              ]
            },
            "designatedNoiseReduction": {
              "enum": [
                "Dolby A",
                "Dolby B",
                "Dolby SR",
                "DBX I",
                "DBX II",
                "Tel Com/High Com",
                "none"
              ]
            }
          }
        },
        "notes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "physicalConditionPreShipNotes": {
              "type": "string"
            },
            "physicalConditionDigitizationNotes": {
              "type": "string"
            }
          }
        }
      }
    },
    "digitizationProcess" : {
      "$id": "digitizationProcess",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "filmScanner",
        "captureSoftware"
      ],
      "properties": {
        "filmScanner": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model"
          ],
          "properties": {
            "serialNumber": {
              "$ref": "fields#playbackDeviceSerialNumber"
            },
            "manufacturer": {
              "$ref": "fields#playbackDeviceManufacturer"
            },
            "model": {
              "$ref": "fields#playbackDeviceModel"
            }
          }
        },
        "captureSoftware": {
          "$ref": "fields#captureSoftware"
        },
        "editingSoftware": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "manufacturer",
            "productName",
            "version",
            "platform"
          ],
          "properties": {
            "manufacturer": {
              "type": "string"
            },
            "productName": {
              "type": "string"
            },
            "version": {
              "type": "string"
            },
            "platform": {
              "type": "string"
            }
          }
        },
        "notes": {
          "$ref": "fields#processNotes"
        }
      }
    },
    "digitizer": { "$ref": "fields#digitizer" }
  }
}
