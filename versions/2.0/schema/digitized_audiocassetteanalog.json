{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Digitized Audio Analog Cassette Schema",
  "id": "digitized_audiocassetteanalog",
  "description": "Definitions for audio analog cassette fields",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "asset",
    "bibliographic",
    "technical",
    "source",
    "digitizationProcess",
    "digitizer"
  ],
  "properties": {
    "asset": { "$ref": "fields#asset" },
    "bibliographic": { "$ref": "fields#bibliographic" },
    "technical": {
      "id": "technical",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "filename",
        "extension",
        "dateCreated",
        "fileFormat",
        "audioCodec",
        "fileSize",
        "durationMilli",
        "durationHuman"
      ],
      "properties": {
        "filename": {
          "$ref": "fields#technicalFilename"
        },
        "extension": {
          "$ref": "fields#technicalExtensionForAudio"
        },
        "dateCreated": {
          "$ref": "fields#technicalDateCreated"
        },
        "fileFormat": {
          "$ref": "fields#technicalFileFormatForAudio"
        },
        "audioCodec": {
          "$ref": "fields#technicalAudioCodecForAudio"
        },
        "fileSize": {
          "$ref": "fields#technicalFileSize"
        },
        "durationMilli": {
          "$ref": "fields#technicalDurationMilli"
        },
        "durationHuman": {
          "$ref": "fields#technicalDurationHuman"
        },
        "signalNotes": {
          "$ref": "fields#technicalSignalNotes"
        }
      }
    },
    "source": {
      "id": "source",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "object",
        "subObject",
        "physicalDescription",
        "audioRecording"
      ],
      "properties": {
        "object": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "format",
            "volumeNumber"
          ],
          "properties": {
            "type": {
              "enum": [ "audio cassette analog" ]
            },
            "format": {
              "enum": [
                "8-track",
                "Compact cassette",
                "Microcassette",
                "Minicassette",
                "Fidelipac Cartridge",
                "NAB Cartridge",
                "Elcaset"
              ]
            },
            "generation": {
              "type": "string"
            },
            "volumeNumber": {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "subObject": {
          "$ref": "fields#subObjectWithStreams"
        },
        "physicalDescription": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "stockManufacturer",
            "tapeWidth",
            "oxideMaterial"
          ],
          "properties": {
            "stockLength": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "type": "number",
                  "multipleOf": 1.0
                },
                "unit": {
                  "enum": [
                    "min"
                  ]
                }
              }
            },
            "stockProductID": {
              "type": "string"
            },
            "stockManufacturer": {
              "type": "string"
            },
            "tapeWidth": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    0.125,
                    0.25
                  ]
                },
                "unit": {
                  "enum": [
                    "in"
                  ]
                }
              }
            },
            "tapeThickness": {
              "properties": {
                "measure": {
                  "type": "number",
                  "multipleOf": 0.5
                },
                "unit": {
                  "enum": [
                    "mils"
                  ]
                }
              }
            },
            "baseMaterial": {
              "enum": [
                "acetate",
                "polyester",
                "acetate and polyester",
                "PVC",
                "unknown"
              ]
            },
            "oxideMaterial": {
              "enum": ["Type I",
                "Type II",
                "Type III",
                "Type IV",
                "unknown"
              ]
            }
          }
        },
        "audioRecording": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "audioSoundField",
            "numberOfAudioTracks",
            "trackConfiguration",
            "designatedSpeed",
            "designatedNoiseReduction"
          ],
          "properties": {
            "audioSoundField": {
              "enum": [
                "stereo",
                "mono",
                "surround",
                "quadrophonic",
                "binaural"
              ]
            },
            "numberOfAudioTracks": {
              "enum": [
                1,
                2,
                4,
                8,
                16,
                32,
                "none"
              ]
            },
            "trackConfiguration": {
              "enum": [
                "full-track",
                "half-track",
                "quarter-track",
                "2 track",
                "4 track",
                "multi-track"
              ]
            },
            "designatedSpeed": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    3.75,
                    1.875,
                    0.9375,
                    "none"
                  ]
                },
                "unit": {
                  "enum": [
                    "ips"
                  ]
                }
              }
            },
            "designatedNoiseReduction": {
              "enum": [
                "Dolby A",
                "Dolby B",
                "Dolby C",
                "Dolby S",
                "none"
              ]
            },
            "designatedEQ": {
              "enum": [
                "Type I",
                "Type II",
                "Type III",
                "Type IV",
                "NAB",
                "none"
              ]
            }
          }
        },
        "notes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "physicalConditionPreShipNotes": {
              "type": "string"
            },
            "physicalConditionDigitizationNotes": {
              "type": "string"
            }
          }
        }
      }
    },
    "digitizationProcess" : {
      "id": "digitizationProcess",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "playbackDevice",
        "analogDigitalConverter",
        "captureSoftware"
      ],
      "properties": {
        "playbackDevice": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model",
            "tapeHeadType",
            "eq",
            "speed"
          ],
          "properties": {
            "id":  {
              "$ref": "fields#playbackDeviceID"
            },
            "serialNumber": {
              "$ref": "fields#playbackDeviceSerialNumber"
            },
            "manufacturer": {
              "$ref": "fields#playbackDeviceManufacturer"
            },
            "model": {
              "$ref": "fields#playbackDeviceModel"
            },
            "tapeHeadType": {
              "enum": [
                "full-track",
                "half-track",
                "quarter-track",
                "2 track",
                "4 track"
              ]
            },
            "noiseReduction": {
              "enum": [
                "Dolby A",
                "Dolby B",
                "Dolby C",
                "Dolby S",
                "none"
              ]
            },
            "eq": {
              "enum": [
                "Type I",
                "Type II",
                "Type III",
                "Type IV",
                "NAB",
                "n/a",
                "none"
              ]
            },
            "speed": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    3.75,
                    1.875,
                    0.9375
                  ]
                },
                "unit": {
                  "enum": [
                    "ips"
                  ]
                }
              }
            }
          }
        },
        "analogDigitalConverter": {
          "$ref": "fields#analogDigitalConverter"
        },
        "captureSoftware": {
          "$ref": "fields#captureSoftware"
        },
        "takeNumber": {
          "$ref": "fields#takeNumber"
        },
        "notes": {
          "$ref": "fields#processNotes"
        }
      }
    },
    "digitizer": { "$ref": "fields#digitizer" }
  }
}
