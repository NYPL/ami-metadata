{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Digitized Video Optical Disc Schema",
  "$id": "digitized_videoopticaldisc",
  "description": "Definitions for video optical fields",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "asset",
    "bibliographic",
    "technical",
    "source",
    "digitizationProcess",
    "digitizer"
  ],
  "properties": {
    "asset": { "$ref": "fields#asset" },
    "bibliographic": { "$ref": "fields#bibliographic" },
    "technical": {
      "$id": "technical",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "filename",
        "extension",
        "dateCreated",
        "fileFormat",
        "fileSize"
      ],
      "properties": {
        "filename": {
          "$ref": "fields#technicalFilename"
        },
        "extension": {
          "enum": [
            "iso", "ISO",
            "mp4", "MP4",
            "mkv", "MKV"
          ]
        },
        "dateCreated": {
          "$ref": "fields#technicalDateCreated"
        },
        "fileFormat": {
          "$ref": "fields#technicalFileFormat"
        },
        "audioCodec": {
          "enum": [
            "AAC",
            "AAC LC",
            "aac",
            "AC3",
            "AC-3",
            "PCM",
            "FLAC",
            "MPEG",
            "MPEG Audio"
                    ]
        },
        "videoCodec": {
          "enum": [
            "ISO 9660",
            "h264",
            "AVC",
            "MPEG-1",
            "MPEG-2V",
            "MPEG Video",
            "MPEG Video / MPEG Video",
            "MPEG Video / MPEG Video / MPEG Video",
            "MPEG Video / MPEG Video / MPEG Video / MPEG Video",
            "MPEG Video / MPEG Video / MPEG Video / MPEG Video / MPEG Video",
            "MPEG Video / MPEG Video / MPEG Video / MPEG Video / MPEG Video / MPEG Video",
            "FFV1"
          ]
        },
        "fileSize": {
          "$ref": "fields#technicalFileSize"
        },
        "durationMilli": {
          "$ref": "fields#technicalDurationMilli"
        },
        "durationHuman": {
          "$ref": "fields#technicalDurationHuman"
        },
        "signalNotes": {
          "$ref": "fields#technicalSignalNotes"
        }
      }
    },
    "source": {
      "$id": "source",
      "type": "object",
      "additionalProperties": true,
      "required": [
        "object",
        "physicalDescription",
        "contentSpecifications",
        "audioRecording"
      ],
      "properties": {
        "object": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "format",
            "volumeNumber"
          ],
          "properties": {
            "type": {
              "enum": [ "video optical disc" ]
            },
            "format": {
              "enum": [
                "Blu-Ray",
                "Laser Disc",
                "VCD",
                "Video DVD-R",
                "Video DVD, pressed",
                "Video DVD+R",
                "Video DVD+RW"
              ]
            },
            "generation": {
              "type": "string"
            },
            "volumeNumber": {
              "type": "number",
              "multipleOf": 1.0,
              "minimum": 1
            }
          }
        },
        "subObject": {
          "$ref": "fields#subObjectWithoutStreams"
        },
        "physicalDescription": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "diameter",
            "dyeLayer",
            "reflectiveLayer"
          ],
          "properties": {
            "stockManufacturer": {
              "type": "string"
            },
            "diameter": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    4.7,
                    3.1,
                    12
                  ]
                },
                "unit": {
                  "enum": [
                    "in"
                  ]
                }
              }
            },
            "dyeLayer": {
              "enum": [
                "phthalocyanine",
                "cyanine",
                "azo",
                "unknown"
              ]
            },
            "reflectiveLayer": {
              "enum": [
                "gold",
                "silver",
                "aluminum",
                "unknown"
              ]
            },
            "dataCapacity": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    0.7,
                    4.7,
                    1.4,
                    8.54,
                    25,
                    50,
                    "unknown"
                  ]
                },
                "unit": {
                  "enum": [
                    "GB"
                  ]
                }
              }
            }
          }
        },
        "contentSpecifications": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "broadcastStandard",
            "colorBW"
          ],
          "properties": {
            "broadcastStandard": {
              "enum": [
                "NTSC",
                "PAL",
                "SECAM"
              ]
            },
            "colorBW": {
              "enum": [
                "b/w",
                "color",
                "color & b/w"
              ]
            },
            "regionCode": {
              "enum": [
                0,
                1,
                2,
                3,
                4,
                5,
                6,
                7,
                8,
                "A",
                "B",
                "C"
              ]
            }
          }
        },
        "audioRecording": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "audioSoundField",
            "numberOfAudioTracks"
          ],
          "properties": {
            "audioSoundField": {
              "$ref": "fields#audioSoundFieldForVideo"
            },
            "numberOfAudioTracks": {
              "type": "number",
              "multipleOf": 1.0,
              "minimum": 0
            }
          }
        },
        "notes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "physicalConditionPreShipNotes": {
              "type": "string"
            },
            "physicalConditionDigitizationNotes": {
              "type": "string"
            }
          }
        }
      }
    },
    "digitizationProcess" : {
      "$id": "digitizationProcess",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "playbackDevice",
        "captureSoftware"
      ],
      "properties": {
        "playbackDevice": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model"
          ],
          "properties": {
            "serialNumber": {
              "$ref": "fields#playbackDeviceSerialNumber"
            },
            "manufacturer": {
              "$ref": "fields#playbackDeviceManufacturer"
            },
            "model": {
              "$ref": "fields#playbackDeviceModel"
            }
          }
        },
        "captureSoftware": {
          "$ref": "fields#captureSoftware"
        },
        "notes": {
          "$ref": "fields#processNotes"
        }
      }
    },
    "digitizer": { "$ref": "fields#digitizer" }
  }
}
