{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "fields",
  "title": "AMI Vendor Schema",
  "description": "All fields for AMI digitization workflow metadata",
  "definitions": {
    "asset": {
      "id": "#asset",
      "type": "object",
      "additionalItems": false,
      "required": [
        "referenceFilename",
        "schemaVersion"
      ],
      "properties": {
        "referenceFilename" : {
          "type": "string",
          "pattern": "^[a-zA-Z\\d\\-\\*]+"
        },
        "fileRole" : {
          "type": "string",
          "enum": [
            "pm",
            "em",
            "sc"
          ]
        },
        "schemaVersion": {
          "type": "string",
          "pattern": "x\\.0\\.\\d+"
        },
        "archiveBoxNumber": {
          "type": "string"
        }
      }
    },
    "bibliographic": {
      "id": "#bibliographic",
      "type": "object",
      "additionalItems": false,
      "required": [
        "primaryID"
      ],
      "properties": {
        "primaryID": {
          "type": "string"
        },
        "classmark": {
          "type": "string"
        },
        "danceFormerClassmark": {
          "type": "string"
        },
        "nonCMSItemID": {
          "type": "string"
        },
        "cmsItemID": {
          "type": "string",
          "pattern": "\\d{6}"
        },
        "cmsCollectionID": {
          "type": "string"
        },
        "catalogBNumber": {
          "type": "string",
          "pattern": "^(b|B)[\\d]{8}$"
        },
        "mssID": {
          "type": "string",
          "pattern": "\\d{5}"
        },
        "barcode": {
          "type": "string",
          "pattern": "33433\\d{9}"
        },
        "divisionCode": {
          "enum": [
            "myt",
            "myd",
            "mym",
            "myh",
            "scb",
            "scd",
            "mae",
            "maf",
            "mao",
            "axv",
            "mya"
          ]
        },
        "vernacularDivisionCode": {
          "enum": [
            "THE",
            "DAN",
            "MUS",
            "RHA",
            "SCL",
            "SCM",
            "BRG",
            "JWS",
            "MSS",
            "NYPLarch"
          ]
        },
        "projectCode": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "disposition": {
          "type": "string"
        },
        "contentNotes": {
          "type": "string"
        },
        "accessNotes": {
          "type": "string"
        },
        "curatorialNotes": {
          "type": "string"
        }
      }
    },
    "technical": {
      "id": "#technical",
      "type": "object",
      "properties": {
        "filename": {
          "id": "#technicalFilename",
          "type": "string",
          "pattern": "^[\\w]+"
        },
        "extensionForAudio": {
          "id": "#technicalExtensionForAudio",
          "enum": [
            "wav", "WAV"
          ]
        },
        "extensionForVideo": {
          "id": "#technicalExtensionForVideo",
          "enum": [
            "mkv", "MKV",
            "mp4", "MP4"
          ]
        },
        "dateCreated": {
          "id": "#technicalDateCreated",
          "type": "string",
          "pattern": "20[0-1]\\d-(0\\d|1[0-2])-(0\\d|[1-2]\\d|3[0-1])"
        },
        "fileFormat": {
          "id": "#technicalFileFormat",
          "type": "string"
        },
        "fileFormatForAudio": {
          "id": "#technicalFileFormatForAudio",
          "enum": [
            "BWF", "bwf"
          ]
        },
        "audioCodecForAudio": {
          "id": "#technicalAudioCodecForAudio",
          "enum": [
            "PCM"
          ]
        },
        "audioCodecForVideo": {
          "id": "#technicalAudioCodecForVideo",
          "enum": [
            "PCM",
            "lpcm",
            "AAC",
            "aac"
          ]
        },
        "videoCodecForVideo": {
          "id": "#technicalVideoCodecForVideo",
          "enum": [
            "FFV1",
            "h264"
          ]
        },
        "fileSize": {
          "id": "#technicalFileSize",
          "type": "object",
          "additionalProperties": false,
          "required": [
            "measure",
            "unit"
          ],
          "properties": {
            "measure": {
              "type": "number",
              "multipleOf": 1.0
            },
            "unit": {
              "enum": [
                "B"
              ]
            }
          }
        },
        "durationMilli": {
          "id": "#technicalDurationMilli",
          "type": "object",
          "additionalProperties": false,
          "required": [
            "measure",
            "unit"
          ],
          "properties": {
            "measure": {
              "type": "number",
              "multipleOf": 1.0
            },
            "unit": {
              "enum": [
                "ms"
              ]
            }
          }
        },
        "durationHuman": {
          "id": "#technicalDurationHuman",
          "type": "string",
          "pattern": "([\\d]+:|)[0-5][\\d]:[0-5][\\d](|\\.\\d+)"
        },
        "signalNotes": {
          "id": "#technicalSignalNotes",
          "type": "string"
        },
        "audioBitDepth": {
          "id": "#technicalAudioBitDepth",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "measure": {
              "type": "number",
              "multipleOf": 1.0
            },
            "unit": {
              "enum": [
                "bit"
              ]
            }
          }
        },
        "audioBitRate": {
          "id": "#technicalAudioBitRate",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "measure": {
              "type": "number",
              "multipleOf": 1.0
            },
            "unit": {
              "enum": [
                "bit/s"
              ]
            },
            "mode": {
              "enum": [
                "VBR",
                "CBR"
              ]
            }
          },
          "audioCodecVersion": {
            "id": "#technicalAudioCodecVersion",
            "type": "string",
            "additionalProperties": false
          },
          "audioDataEncoding": {
            "id": "#technicalAudioDataEncoding",
            "type": "string",
            "additionalProperties": false
          },
          "audioSamplingRate": {
            "id": "#technicalAudioSamplingRate",
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "measure": {
                "type": "number",
                "multipleOf": 1.0
              },
              "unit": {
                "enum": [
                  "hz"
                ]
              }
            }
          }
        }
      }
    },
    "source": {
      "type": "object",
      "properties": {
        "subObjectWithoutStreams": {
          "id": "#subObjectWithoutStreams",
          "type": "object",
          "additionalProperties": false,
          "required": [
            "faceNumber"
          ],
          "properties": {
            "faceNumber": {
              "type": "number",
              "multipleOf": 1.0
            },
            "regionNumber": {
              "type": "number",
              "multipleOf": 1.0
            },
            "partNumber": {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        }
      },
      "subObjectWithStreams": {
        "id": "#subObjectWithStreams",
        "type": "object",
        "additionalProperties": false,
        "required": [
          "faceNumber"
        ],
        "properties": {
          "faceNumber": {
            "type": "number",
            "multipleOf": 1.0
          },
          "regionNumber": {
            "type": "number",
            "multipleOf": 1.0
          },
          "streamNumber": {
            "type": "number",
            "multipleOf": 1.0
          },
          "partNumber": {
            "type": "number",
            "multipleOf": 1.0
          }
        }
      }
    },
    "digitizationProcess" : {
      "id": "#digitizationProcess",
      "type": "object",
      "additionalItems": false,
      "properties": {
        "playbackDevice": {
          "type": "object",
          "properties": {
            "id": {
              "id": "#playbackDeviceID",
              "type": ["string", "number"]
            },
            "serialNumber": {
              "id": "#playbackDeviceSerialNumber",
              "type": ["string", "number"]
            },
            "manufacturer": {
              "id": "#playbackDeviceManufacturer",
              "type": "string"
            },
            "model": {
              "id": "#playbackDeviceModel",
              "type": "string"
            },
            "tapeHeadType": {
              "id": "#playbackDeviceTapeHeadType",
              "type": "string"
            },
            "operatingLevel": {
              "id": "#playbackDeviceOperatingLevel",
              "type": "number"
            },
            "noiseReduction": {
              "id": "#playbackDeviceNoiseReduction",
              "type": "string"
            },
            "eq": {
              "id": "#playbackDeviceEQ",
              "type": "string"
            },
            "speed": {
              "id": "#playbackDeviceSpeed",
              "type": "object"
            }
          }
        },
        "timeBaseCorrector": {
          "type": "object",
          "properties": {
            "id": {
              "id": "#timeBaseCorrectorID",
              "type": ["string", "number"]
            },
            "serialNumber": {
              "id": "#timeBaseCorrectorSerialNumber",
              "type": ["string", "number"]
            },
            "manufacturer": {
              "id": "#timeBaseCorrectorManufacturer",
              "type": "string"
            },
            "model": {
              "id": "#timeBaseCorrectorModel",
              "type": "string"
            }
          }
        },
        "analogDigitalConverter": {
          "id": "#analogDigitalConverter",
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model",
            "operatingLevel"
          ],
          "properties": {
            "id": {
              "id": "#analogDigitalConverterID",
              "type": ["string", "number"]
            },
            "serialNumber": {
              "id": "#analogDigitalConverterSerialNumber",
              "type": ["string", "number"]
            },
            "manufacturer": {
              "id": "#analogDigitalConverterManufacturer",
              "type": "string"
            },
            "model": {
              "id": "#analogDigitalConverterModel",
              "type": "string"
            },
            "operatingLevel": {
              "id": "#analogDigitalConverterOperatingLevel",
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    -12,
                    -14,
                    -15,
                    -16,
                    -18,
                    -20
                  ]
                },
                "unit": {
                  "enum": [
                    "dBFS"
                  ]
                }
              }
            }
          }
        },
        "captureSoftware": {
          "id": "#captureSoftware",
          "type": "object",
          "additionalProperties": false,
          "required": [
            "manufacturer",
            "productName",
            "version",
            "platform"
          ],
          "type": "object",
          "properties": {
            "manufacturer": {
              "id": "#captureSoftwareManufacturer",
              "type": "string"
            },
            "productName": {
              "id": "#captureSoftwareProductName",
              "type": "string"
            },
            "version": {
              "id": "#captureSoftwareVersion",
              "type": "string"
            },
            "platform": {
              "id": "#captureSoftwarePlatform",
              "type": "string"
            }
          }
        },
        "takeNumber": {
          "id": "#takeNumber",
          "type": "object",
          "properties": {
            "number" : {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "notes": {
          "id": "#processNotes",
          "type": "object",
          "properties": {
            "processNotes": {
              "type": "string"
            }
          }
        }
      }
    },
    "digitizer": {
      "id": "#digitizer",
      "type": "object",
      "additionalItems": false,
      "required": [
        "operator",
        "organization"
      ],
      "properties": {
        "operator": {
          "type": "object",
          "additionalItems": false,
          "required": [
            "firstName",
            "lastName"
          ],
          "properties": {
            "firstName": {
              "type": "string"
            },
            "lastName": {
              "type": "string"
            }
          }
        },
        "organization": {
          "type": "object",
          "additionalItems": false,
          "required": [
            "name",
            "address"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "address": {
              "type": "object",
              "required": [
                "street1",
                "city",
                "state",
                "postalCode"
              ],
              "properties": {
                "street1":  {
                  "type": "string"
                },
                "street2":  {
                  "type": "string"
                },
                "city": {
                  "type": "string"
                },
                "state":  {
                  "type": "string",
                  "pattern":  "^[A-Z]{2}$"
                },
                "postalCode": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
