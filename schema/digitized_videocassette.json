{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Digitized Video Cassette Schema",
  "id": "digitized_videocassette",
  "description": "Definitions for audio optical fields",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "asset",
    "bibliographic",
    "technical",
    "source",
    "digitizationProcess",
    "digitizer"
  ],
  "properties": {
    "asset": { "$ref": "fields#asset" },
    "bibliographic": { "$ref": "fields#bibliographic" },
    "technical": { "$ref": "fields#technical" },
    "source": {
      "id": "source",
      "type": "object",
      "additionalProperties": true,
      "required": [
        "object",
        "subObject",
        "stock",
        "contentSpecifications",
        "audioRecording"
      ],
      "properties": {
        "object": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "format",
            "volumeNumber"
          ],
          "properties": {
            "type": {
              "enum": [ "video cassette" ]
            },
            "format": {
              "enum": [
                "3/4 inch U-matic",
                "Betacam",
                "Betacam SP",
                "Betacam SX",
                "Betamax",
                "D-1",
                "D-2",
                "D-3",
                "Digital8",
                "Digital Betacam",
                "DVCam",
                "DVCPRO",
                "DVCPRO HD",
                "HDCAM",
                "HDV",
                "Hi8",
                "MII",
                "MiniDV",
                "SVHS",
                "VHS",
                "Video8"
              ]
            },
            "volumeNumber": {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "subObject": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "faceNumber": {
              "type": "number",
              "multipleOf": 1.0
            },
            "regionNumber": {
              "type": "number",
              "multipleOf": 1.0
            },
            "partNumber": {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "stock": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "stockManufacturer",
            "stockProductID",
            "tapeWidth",
            "baseMaterial",
            "oxideMaterial"
          ],
          "properties": {
            "stockLength": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "type": "number",
                  "multipleOf": 1.0
                },
                "unit": {
                  "enum": [
                    "min"
                  ]
                }
              }
            },
            "stockManufacturer": {
              "type": "string"
            },
            "stockProductID": {
              "type": "string"
            },
            "tapeWidth": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "type": "number",
                  "multipleOf": 0.01
                },
                "unit": {
                  "enum": [
                    "in"
                  ]
                }
              }
            },
            "baseMaterial": {
              "enum": [
                "acetate",
                "polyester",
                "PVC",
                "paper"
              ]
            },
            "oxideMaterial": {
              "enum": [
                "ferric oxide",
                "chromium dioxide",
                "unknown"
              ]
            }
          }
        },
        "contentSpecifications": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "broadcastStandard",
            "colorBW"
          ],
          "properties": {
            "broadcastStandard": {
              "enum": [
                "NTSC",
                "PAL",
                "SECAM"
              ]
            },
            "colorBW": {
              "enum": [
                "b/w",
                "color",
                "color & b/w"
              ]
            }
          }
        },
        "audioRecording": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "audioSoundField",
            "numberOfAudioTracks"
          ],
          "properties": {
            "audioSoundField": {
              "enum": [
                "stereo",
                "mono",
                "surround"
              ]
            },
            "numberOfAudioTracks": {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "notes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "physicalConditionPreShipNotes": {
              "type": "string"
            },
            "physicalConditionDigitizationNotes": {
              "type": "string"
            }
          }
        }
      }
    },
    "digitizationProcess" : {
      "id": "digitizationProcess",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "playbackDevice",
        "timeBaseCorrector",
        "captureSoftware"
      ],
      "properties": {
        "playbackDevice": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model"
          ],
          "properties": {
            "id":  {
              "$ref": "fields#playbackDeviceID"
            },
            "serialNumber": {
              "$ref": "fields#playbackDeviceSerialNumber"
            },
            "manufacturer": {
              "$ref": "fields#playbackDeviceManufacturer"
            },
            "model": {
              "$ref": "fields#playbackDeviceModel"
            }
          }
        },
        "analogDigitalConverter": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model"
          ],
          "properties": {
            "id":  {
              "$ref": "fields#analogDigitalConverterID"
            },
            "serialNumber": {
              "$ref": "fields#analogDigitalConverterSerialNumber"
            },
            "manufacturer": {
              "$ref": "fields#analogDigitalConverterManufacturer"
            },
            "model": {
              "$ref": "fields#analogDigitalConverterModel"
            }
          }
        },
        "timeBaseCorrector": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model"
          ],
          "properties": {
            "id":  {
              "$ref": "fields#timeBaseCorrectorID"
            },
            "serialNumber": {
              "$ref": "fields#timeBaseCorrectorSerialNumber"
            },
            "manufacturer": {
              "$ref": "fields#timeBaseCorrectorManufacturer"
            },
            "model": {
              "$ref": "fields#timeBaseCorrectorModel"
            }
          }
        },
        "analogDigitalConverter": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model"
          ],
          "properties": {
            "id":  {
              "$ref": "fields#analogDigitalConverterID"
            },
            "serialNumber": {
              "$ref": "fields#analogDigitalConverterSerialNumber"
            },
            "manufacturer": {
              "$ref": "fields#analogDigitalConverterManufacturer"
            },
            "model": {
              "$ref": "fields#analogDigitalConverterModel"
            }
          }
        },
        "captureSoftware": {
          "$ref": "fields#captureSoftware"
        },
        "take": {
          "$ref": "fields#take"
        },
        "notes": {
          "$ref": "fields#processNotes"
        }
      }
    },
    "digitizer": { "$ref": "fields#digitizer" }
  }
}
