{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "fields",
  "title": "AMI Vendor Schema",
  "description": "All fields for AMI digitization workflow metadata",
  "definitions": {
    "asset": {
      "id": "#asset",
      "type": "object",
      "additionalItems": false,
      "properties": {
        "referenceFilename" : {
          "type": "string",
          "pattern": "^.+\\.[a-zA-Z0-9]{3}"
        },
        "schemaVersion": {
          "type": "number",
          "multipleOf": 1.0
        }
      }
    },
    "bibliographic": {
      "id": "#bibliographic",
      "type": "object",
      "additionalItems": false,
      "properties": {
        "primaryID": {
          "type": "string"
        },
        "classmark": {
          "type": "string"
        },
        "danceFormerClassmark": {
          "type": "string"
        },
        "nonCMSItemID": {
          "type": "string"
        },
        "cmsItemID": {
          "type": "number",
          "minimum": 100000,
          "maximum": 999999
        },
        "cmsCollectionID": {
          "type": "string"
        },
        "catalogBNumber": {
          "type": "string",
          "pattern": "^(b|B)[0-9]{8}$"
        },
        "mssID": {
          "type": "number",
          "minimum": 10000,
          "maximum": 99999
        },
        "barcode": {
          "type": "number",
          "minimum": 33433000000000,
          "maximum": 33433999999999
        },
        "mmsCollectionID": {
          "type": "string",
          "pattern": "^[a-z0-9]{8}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{12}$"
        },
        "divisionCode": {
          "type": "string",
          "pattern": "^[a-zA-Z]{3}$"
        },
        "vernacularDivisionCode": {
          "type": "string"
        },
        "projectCode": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "contentNotes": {
          "type": "string"
        }
      }
    },
    "technical": {
      "id": "#technical",
      "type": "object",
      "additionalItems": false,
      "properties": {
        "filename": {
          "type": "string",
          "pattern": "^.+\\.[a-zA-Z0-9]{3}"
        },
        "extensionv": {
          "type": "string",
          "pattern": "[a-zA-Z0-9]{3}"
        },
        "dateCreated": {
          "type": "string",
          "pattern": "201[6-9]-(0[1-9]|1[0-2])-(0[1-9]|[1-2][0-9]|3[0-1])"
        },
        "fileFormat": {
          "type": "string"
        },
        "fileCodec": {
          "type": "string"
        },
        "fileSize": {
          "type": "number",
          "multipleOf": 1.0
        },
        "durationMilli": {
          "type": "number"
        },
        "durationHuman": {
          "type": "string",
          "pattern": "[0-9]{2}:[0-5][0-9]:[0-5][0-9]"
        },
        "signalNotes": {
          "type": "string"
        }
      }
    },
    "source": {
      "id": "#source",
      "type": "object"
    },
    "digitizationProcess" : {
      "id": "#digitizationProcess",
      "type": "object",
      "additionalItems": false,
      "properties": {
        "playbackDevice": {
          "type": "object",
          "properties": {
            "id": {
              "id": "#playbackDeviceID",
              "type": ["string", "number"]
            },
            "serialNumber": {
              "id": "#playbackDeviceSerialNumber",
              "type": "string"
            },
            "manufacturer": {
              "id": "#playbackDeviceManufacturer",
              "type": "string"
            },
            "model": {
              "id": "#playbackDeviceModel",
              "type": "string"
            },
            "tapeHeadType": {
              "id": "#playbackDeviceTapeHeadType",
              "type": "string"
            },
            "operatingLevel": {
              "id": "#playbackDeviceOperatingLevel",
              "type": "number"
            },
            "noiseReduction": {
              "id": "#playbackDeviceNoiseReduction",
              "type": "string"
            },
            "eq": {
              "id": "#playbackDeviceEQ",
              "type": "string"
            },
            "speed": {
              "id": "#playbackDeviceSpeed",
              "type": "number"
            }
          }
        },
        "timeBaseCorrector": {
          "type": "object",
          "properties": {
            "id": {
              "id": "#timeBaseCorrectorID",
              "type": ["string", "number"]
            },
            "serialNumber": {
              "id": "#timeBaseCorrectorSerialNumber",
              "type": "string"
            },
            "manufacturer": {
              "id": "#timeBaseCorrectorManufacturer",
              "type": "string"
            },
            "model": {
              "id": "#timeBaseCorrectorModel",
              "type": "string"
            }
          }
        },
        "analogDigitalConverter": {
          "type": "object",
          "properties": {
            "id": {
              "id": "#analogDigitalConverterID",
              "type": ["string", "number"]
            },
            "serialNumber": {
              "id": "#analogDigitalConverterSerialNumber",
              "type": "string"
            },
            "manufacturer": {
              "id": "#analogDigitalConverterManufacturer",
              "type": "string"
            },
            "model": {
              "id": "#analogDigitalConverterModel",
              "type": "string"
            },
            "operatingLevel": {
              "id": "#analogDigitalConverterOperatingLevel",
              "type": "number"
            }
          }
        },
        "captureSoftware": {
          "id": "#captureSoftware",
          "type": "object",
          "additionalProperties": false,
          "required": [
            "manufacturer",
            "productName",
            "version",
            "platform"
          ],
          "type": "object",
          "properties": {
            "manufacturer": {
              "id": "#captureSoftwareManufacturer",
              "type": "string"
            },
            "productName": {
              "id": "#captureSoftwareProductName",
              "type": "string"
            },
            "version": {
              "id": "#captureSoftwareVersion",
              "type": "string"
            },
            "platform": {
              "id": "#captureSoftwarePlatform",
              "type": "string"
            }
          }
        },
        "take": {
          "type": "object",
          "properties": {
            "number" : {
              "id": "#takeNumber",
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "notes": {
          "id": "#processNotes",
          "type": "object",
          "properties": {
            "processNotes": {
              "type": "string"
            }
          }
        }
      }
    },
    "digitizer": {
      "id": "#digitizer",
      "type": "object",
      "additionalItems": false,
      "required": [
        "operator",
        "organization"
      ],
      "properties": {
        "operator": {
          "type": "object",
          "additionalItems": false,
          "required": [
            "firstName",
            "lastName"
          ],
          "properties": {
            "firstName": {
              "type": "string"
            },
            "lastName": {
              "type": "string"
            }
          }
        },
        "organization": {
          "type": "object",
          "additionalItems": false,
          "required": [
            "name",
            "addressStreet1",
            "addressCity",
            "addressState",
            "addressZip"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "addressStreet1": {
              "type": "string"
            },
            "addressStreet2": {
              "type": "string"
            },
            "addressCity": {
              "type": "string"
            },
            "addressState": {
              "type": "string",
              "pattern": "^[A-Z]{2}$"
            },
            "addressZip": {
              "type": "number",
              "minimum": 10000,
              "maximum": 99999
            }
          }
        }
      }
    }
  }
}
