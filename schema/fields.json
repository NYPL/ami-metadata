{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "fields",
  "title": "AMI Vendor Schema",
  "description": "All fields for AMI digitization workflow metadata",
  "definitions": {
    "asset": {
      "id": "#asset",
      "type": "object",
      "additionalItems": false,
      "required": [
        "referenceFilename",
        "schemaVersion"
      ],
      "properties": {
        "referenceFilename" : {
          "type": "string",
          "pattern": "^[a-zA-Z0-9\\-\\*]+"
        },
        "fileRole" : {
          "type": "string",
          "enum": [
            "pm",
            "em",
            "sc"
          ]
        },
        "schemaVersion": {
          "type": "number",
          "multipleOf": 1.0
        }
      }
    },
    "bibliographic": {
      "id": "#bibliographic",
      "type": "object",
      "additionalItems": false,
      "required": [
        "primaryID",
        "barcode",
        "divisionCode"
      ],
      "properties": {
        "primaryID": {
          "type": "string"
        },
        "classmark": {
          "type": "string"
        },
        "danceFormerClassmark": {
          "type": "string"
        },
        "nonCMSItemID": {
          "type": "string"
        },
        "cmsItemID": {
          "type": "string",
          "pattern": "\\d{6}"
        },
        "cmsCollectionID": {
          "type": "string"
        },
        "catalogBNumber": {
          "type": "string",
          "pattern": "^(b|B)[0-9]{8}$"
        },
        "mssID": {
          "type": "string",
          "pattern": "\\d{5}"
        },
        "barcode": {
          "type": "string",
          "pattern": "33433\\d{9}"
        },
        "divisionCode": {
          "enum": [
            "myt",
            "myd",
            "mym",
            "myh",
            "scb",
            "scd",
            "mae",
            "maf",
            "mao",
            "axv"
          ]
        },
        "vernacularDivisionCode": {
          "enum": [
            "THE",
            "DAN",
            "MUS",
            "RHA",
            "SCL",
            "SCM",
            "BRG",
            "JWS",
            "MSS",
            "NYPLarch"
          ]
        },
        "projectCode": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "contentNotes": {
          "type": "string"
        },
        "accessNotes": {
          "type": "string"
        }
      }
    },
    "technical": {
      "id": "#technical",
      "type": "object",
      "properties": {
        "filename": {
          "id": "#technicalFilename",
          "type": "string",
          "pattern": "^[a-zA-Z0-9_]+"
        },
        "extension": {
          "id": "#technicalExtension",
          "type": "string",
          "pattern": "[a-zA-Z0-9]{3}"
        },
        "dateCreated": {
          "id": "#technicalDateCreated",
          "type": "string",
          "pattern": "201[6-9]-(0[1-9]|1[0-2])-(0[1-9]|[1-2][0-9]|3[0-1])"
        },
        "fileFormat": {
          "id": "#technicalFileFormat",
          "type": "string"
        },
        "audioCodec": {
          "id": "#technicalAudioCodec",
          "type": "string"
        },
        "videoCodec": {
          "id": "#technicalVideoCodec",
          "type": "string"
        },
        "fileSize": {
          "id": "#technicalFileSize",
          "type": "object",
          "additionalProperties": false,
          "required": [
            "measure",
            "unit"
          ],
          "properties": {
            "measure": {
              "type": "number",
              "multipleOf": 1.0
            },
            "unit": {
              "enum": [
                "B"
              ]
            }
          }
        },
        "durationMilli": {
          "id": "#technicalDurationMilli",
          "type": "object",
          "additionalProperties": false,
          "required": [
            "measure",
            "unit"
          ],
          "properties": {
            "measure": {
              "type": "number",
              "multipleOf": 1.0
            },
            "unit": {
              "enum": [
                "ms"
              ]
            }
          }
        },
        "durationHuman": {
          "id": "#technicalDurationHuman",
          "type": "string",
          "pattern": "([0-9]+:|)[0-5][0-9]:[0-5][0-9].[0-9]{3}"
        },
        "signalNotes": {
          "id": "#technicalSignalNotes",
          "type": "string"
        }
      }
    },
    "source": {
      "id": "#source",
      "type": "object"
    },
    "digitizationProcess" : {
      "id": "#digitizationProcess",
      "type": "object",
      "additionalItems": false,
      "properties": {
        "playbackDevice": {
          "type": "object",
          "properties": {
            "id": {
              "id": "#playbackDeviceID",
              "type": ["string", "number"]
            },
            "serialNumber": {
              "id": "#playbackDeviceSerialNumber",
              "type": ["string", "number"]
            },
            "manufacturer": {
              "id": "#playbackDeviceManufacturer",
              "type": "string"
            },
            "model": {
              "id": "#playbackDeviceModel",
              "type": "string"
            },
            "tapeHeadType": {
              "id": "#playbackDeviceTapeHeadType",
              "type": "string"
            },
            "operatingLevel": {
              "id": "#playbackDeviceOperatingLevel",
              "type": "number"
            },
            "noiseReduction": {
              "id": "#playbackDeviceNoiseReduction",
              "type": "string"
            },
            "eq": {
              "id": "#playbackDeviceEQ",
              "type": "string"
            },
            "speed": {
              "id": "#playbackDeviceSpeed",
              "type": "object"
            }
          }
        },
        "timeBaseCorrector": {
          "type": "object",
          "properties": {
            "id": {
              "id": "#timeBaseCorrectorID",
              "type": ["string", "number"]
            },
            "serialNumber": {
              "id": "#timeBaseCorrectorSerialNumber",
              "type": ["string", "number"]
            },
            "manufacturer": {
              "id": "#timeBaseCorrectorManufacturer",
              "type": "string"
            },
            "model": {
              "id": "#timeBaseCorrectorModel",
              "type": "string"
            }
          }
        },
        "analogDigitalConverter": {
          "id": "#analogDigitalConverter",
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model",
            "operatingLevel"
          ],
          "properties": {
            "id": {
              "id": "#analogDigitalConverterID",
              "type": ["string", "number"]
            },
            "serialNumber": {
              "id": "#analogDigitalConverterSerialNumber",
              "type": ["string", "number"]
            },
            "manufacturer": {
              "id": "#analogDigitalConverterManufacturer",
              "type": "string"
            },
            "model": {
              "id": "#analogDigitalConverterModel",
              "type": "string"
            },
            "operatingLevel": {
              "id": "#analogDigitalConverterOperatingLevel",
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    -12,
                    -14,
                    -15,
                    -16,
                    -18,
                    -20
                  ]
                },
                "unit": {
                  "enum": [
                    "dBFS"
                  ]
                }
              }
            }
          }
        },
        "captureSoftware": {
          "id": "#captureSoftware",
          "type": "object",
          "additionalProperties": false,
          "required": [
            "manufacturer",
            "productName",
            "version",
            "platform"
          ],
          "type": "object",
          "properties": {
            "manufacturer": {
              "id": "#captureSoftwareManufacturer",
              "type": "string"
            },
            "productName": {
              "id": "#captureSoftwareProductName",
              "type": "string"
            },
            "version": {
              "id": "#captureSoftwareVersion",
              "type": "string"
            },
            "platform": {
              "id": "#captureSoftwarePlatform",
              "type": "string"
            }
          }
        },
        "takeNumber": {
          "id": "#takeNumber",
          "type": "object",
          "properties": {
            "number" : {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "notes": {
          "id": "#processNotes",
          "type": "object",
          "properties": {
            "processNotes": {
              "type": "string"
            }
          }
        }
      }
    },
    "digitizer": {
      "id": "#digitizer",
      "type": "object",
      "additionalItems": false,
      "required": [
        "operator",
        "organization"
      ],
      "properties": {
        "operator": {
          "type": "object",
          "additionalItems": false,
          "required": [
            "firstName",
            "lastName"
          ],
          "properties": {
            "firstName": {
              "type": "string"
            },
            "lastName": {
              "type": "string"
            }
          }
        },
        "organization": {
          "type": "object",
          "additionalItems": false,
          "required": [
            "name",
            "address"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "address": {
              "type": "object",
              "required": [
                "street1",
                "city",
                "state",
                "postalCode"
              ],
              "street1":  {
                "type": "string"
              },
              "street2":  {
                "type": "string"
              },
              "city": {
                "type": "string"
              },
              "state":  {
                "type": "string",
                "pattern":  "^[A-Z]{2}$"
              },
              "postalCode": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
