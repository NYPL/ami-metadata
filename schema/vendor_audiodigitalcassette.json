{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "AMI Vendor Audio Optical Partial Schema",
  "id": "vendor_audiodigitalcassette",
  "description": "Definitions for audio optical fields",
  "source": {
    "id": "#source",
    "type": "object",
    "additionalProperties": false,
    "required": [
      "object",
      "subObject",
      "stock",
      "audioRecording"
    ],
    "properties": {
      "object": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type",
          "format",
          "volumeNumber"
        ],
        "properties": {
          "type": {
            "enum": [ "audio digital cassette" ]
          },
          "format": {
            "enum": [
              "DAT cassette",
              "Digital Compact Cassette",
              "F1 Audio (Betamax)",
              "PCM-1630 (U-Matic)"
            ]
          },
          "generation": {
            "enum": [
              "unknown",
              1,
              2,
              3
            ]
          },
          "volumeNumber": {
            "type": "number",
            "multipleOf": 1.0
          }
        }
      },
      "subObject": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "faceNumber"
        ],
        "properties": {
          "faceNumber": {
            "type": "number",
            "multipleOf": 1.0
          },
          "regionNumber": {
            "type": "number",
            "multipleOf": 1.0
          },
          "streamNumber": {
            "type": "number",
            "multipleOf": 1.0
          },
          "partNumber": {
            "type": "number",
            "multipleOf": 1.0
          }
        }
      },
      "stock": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "stockManufacturer",
          "stockProductID",
          "tapeWidth",
          "tapeThickness",
          "baseMaterial",
          "oxideMaterial"
        ],
        "properties": {
          "stockLength": {
            "type": "number",
            "multipleOf": 1.0
          },
          "stockProductID": {
            "type": "string"
          },
          "stockManufacturer": {
            "type": "string"
          },
          "tapeWidth": {
            "enum": [
              0.25
            ]
          },
          "tapeThickness": {
            "type": "number",
            "multipleOf": 1.0
          },
          "baseMaterial": {
            "enum": [
              "acetate",
              "polyester",
              "PVC",
              "paper"
            ]
          },
          "oxideMaterial": {
            "enum": [
              "ferric",
              "chromium",
              "ferrichrome",
              "metal",
              "unknown"
            ]
          },
          "backcoatMaterial": {
            "enum": [
              "yes",
              "no"
            ]
          }
        }
      },
      "audioRecording": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "audioSoundField",
          "numberOfAudioTracks",
          "trackConfiguration",
          "designatedSpeed",
          "audioBitDepth",
          "audioSamplingRate"
        ],
        "properties": {
          "audioSoundField": {
            "enum": [
              "stereo",
              "mono",
              "surround",
              "quadrophonic",
              "binaural"
            ]
          },
          "numberOfAudioTracks": {
            "enum": [
              4,
              "n/a"
            ]
          },
          "trackConfiguration": {
            "enum": [
              "full-track",
              "half-track",
              "two-track",
              "quarter-track",
              "four-track"
            ]
          },
          "designatedSpeed": {
            "enum": [
              ".3209 (Standard)",
              ".16043 (Long Play)",
              "not specified"
            ]
          },
          "audioBitDepth": {
            "enum": [
              8,
              16,
              18,
              20,
              24,
              32
            ]
          },
          "audioSamplingRate": {
            "enum": [
              22500,
              32000,
              44056,
              44100,
              47925,
              48000,
              64000,
              88000,
              88112,
              88200,
              95904,
              96000,
              128000,
              176224,
              176400,
              191808,
              192000
            ]
          }
        }
      },
      "notes": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "physicalConditionPreShipNotes": {
            "type": "string"
          },
          "physicalConditionDigitizationNotes": {
            "type": "string"
          }
        }
      }
    }
  },
  "digitizationProcess" : {
    "id": "#digitizationProcess",
    "type": "object",
    "additionalProperties": false,
    "required": [
      "playbackDevice",
      "captureSoftware"
    ],
    "properties": {
      "playbackDevice": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "playbackDeviceSerialNumber",
          "playbackDeviceManufacturer",
          "playbackDeviceModel",
          "playbackSpeed"
        ],
        "properties": {
          "playbackDeviceID":  {
            "type": ["string", "number"]
          },
          "playbackDeviceSerialNumber": {
            "type": ["string", "number"]
          },
          "playbackDeviceManufacturer": {
            "type": "string"
          },
          "playbackDeviceModel": {
            "type": "string"
          },
          "playbackSpeed": {
            "enum": [
              ".3209 (Standard)",
              ".16043 (Long Play)",
              "not specified"
            ]
          }
        }
      },
      "captureSoftware": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "captureSoftwareManufacturer",
          "captureSoftwareProductName",
          "captureSoftwareVersion",
          "captureSoftwarePlatform"
        ],
        "properties": {
          "captureSoftwareManufacturer": {
            "type": "string"
          },
          "captureSoftwareProductName": {
            "type": "string"
          },
          "captureSoftwareVersion": {
            "type": "string"
          },
          "captureSoftwarePlatform": {
            "type": "string"
          }
        }
      },
      "notes": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "processNotes": {
            "type": "string"
          }
        }
      }
    }
  }
}
