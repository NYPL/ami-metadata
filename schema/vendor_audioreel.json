{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "AMI Vendor Audio Optical Partial Schema",
  "id": "vendor_audioreel",
  "description": "Definitions for audio optical fields",
  "source": {
    "id": "#source",
    "type": "object",
    "additionalProperties": false,
    "required": [
      "object",
      "subObject",
      "stock",
      "audioRecording"
    ],
    "properties": {
      "object": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type",
          "format",
          "volumeNumber"
        ],
        "properties": {
          "type": {
            "enum": [ "audio reel" ]
          },
          "format": {
            "enum": [
              "1/4\" open reel audio"
            ]
          },
          "generation": {
            "enum": [
              "unknown",
              1,
              2,
              3
            ]
          },
          "volumeNumber": {
            "type": "number",
            "multipleOf": 1.0
          }
        }
      },
      "subObject": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "faceNumber"
        ],
        "properties": {
          "faceNumber": {
            "type": "number",
            "multipleOf": 1.0
          },
          "regionNumber": {
            "type": "number",
            "multipleOf": 1.0
          },
          "streamNumber": {
            "type": "number",
            "multipleOf": 1.0
          },
          "partNumber": {
            "type": "number",
            "multipleOf": 1.0
          }
        }
      },
      "stock": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "reelDiameter",
          "stockManufacturer",
          "stockProductID",
          "tapeWidth",
          "tapeThickness",
          "baseMaterial",
          "oxideMaterial"
        ],
        "properties": {
          "reelDiameter": {
            "enum": [
              3,
              5,
              7,
              10.5
            ]
          },
          "stockProductID": {
            "type": "string"
          },
          "stockManufacturer": {
            "type": "string"
          },
          "tapeWidth": {
            "enum": [
              0.25
            ]
          },
          "tapeThickness": {
            "type": "number",
            "multipleOf": 1.0
          },
          "baseMaterial": {
            "enum": [
              "acetate",
              "polyester",
              "PVC",
              "paper"
            ]
          },
          "oxideMaterial": {
            "enum": [
              "ferric oxide",
              "chromium dioxide",
              "unknown"
            ]
          },
          "backcoatMaterial": {
            "enum": [
              "yes",
              "no"
            ]
          }
        }
      },
      "audioRecording": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "audioSoundField",
          "numberOfAudioTracks",
          "trackConfiguration",
          "designatedSpeed",
          "designatedNoiseReduction",
          "designatedEQ"
        ],
        "properties": {
          "audioSoundField": {
            "enum": [
              "stereo",
              "mono",
              "surround",
              "quadrophonic",
              "binaural"
            ]
          },
          "numberOfAudioTracks": {
            "enum": [
              3,
              8,
              16,
              24,
              "n/a"
            ]
          },
          "trackConfiguration": {
            "enum": [
              "full-track",
              "half-track",
              "two-track",
              "quarter-track",
              "three-track",
              "four-track",
              "eight-track",
              "sixteen-track",
              "twenty-four-track"
            ]
          },
          "designatedSpeed": {
            "enum": [
              30,
              15,
              7.5,
              3.75,
              1.875,
              0.9375,
              "not specified"
            ]
          },
          "designatedNoiseReduction": {
            "enum": [
              "Dolby A",
              "Dolby B",
              "Dolby SR",
              "DBX I",
              "DBX II",
              "Tel Com/High Com",
              "not specified"
            ]
          },
          "designatedEQ": {
            "enum": [
              "NAB",
              "IEC",
              "not specified"
            ]
          }
        }
      },
      "notes": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "physicalConditionPreShipNotes": {
            "type": "string"
          },
          "physicalConditionDigitizationNotes": {
            "type": "string"
          }
        }
      }
    }
  },
  "digitizationProcess" : {
    "id": "#digitizationProcess",
    "type": "object",
    "additionalProperties": false,
    "required": [
      "playbackDevice",
      "captureSoftware"
    ],
    "properties": {
      "playbackDevice": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "playbackDeviceSerialNumber",
          "playbackDeviceManufacturer",
          "playbackDeviceModel",
          "playbackTapeHeadType",
          "playbackDeviceOperatingLevel",
          "playbackNoiseReduction",
          "playbackEQ",
          "playbackSpeed"
        ],
        "properties": {
          "playbackDeviceID":  {
            "type": ["string", "number"]
          },
          "playbackDeviceSerialNumber": {
            "type": ["string", "number"]
          },
          "playbackDeviceManufacturer": {
            "type": "string"
          },
          "playbackDeviceModel": {
            "type": "string"
          },
          "playbackTapeHeadType": {
            "enum": [
              "full-track",
              "half-track",
              "two-track",
              "quarter-track",
              "three-track",
              "four-track",
              "eight-track",
              "sixteen-track",
              "twenty-four-track"
            ]
          },
          "playbackDeviceOperatingLevel": {
            "enum": [
              185,
              200,
              224,
              250,
              280,
              315,
              320,
              355,
              400,
              450,
              500
            ]
          },
          "playbackNoiseReduction": {
            "enum": [
              "Dolby A",
              "Dolby B",
              "Dolby SR",
              "DBX I",
              "DBX II",
              "Tel Com/High Com",
              "unknown",
              "n/a"
            ]
          },
          "playbackEQ": {
            "enum": [
              "NAB",
              "IEC",
              "not specified"
            ]
          },
          "playbackSpeed": {
            "enum": [
              30,
              15,
              7.5,
              3.75,
              1.875,
              0.9375,
              3.12,
              6.25
            ]
          }
        }
      },
      "captureSoftware": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "captureSoftwareManufacturer",
          "captureSoftwareProductName",
          "captureSoftwareVersion",
          "captureSoftwarePlatform"
        ],
        "properties": {
          "captureSoftwareManufacturer": {
            "type": "string"
          },
          "captureSoftwareProductName": {
            "type": "string"
          },
          "captureSoftwareVersion": {
            "type": "string"
          },
          "captureSoftwarePlatform": {
            "type": "string"
          }
        }
      },
      "notes": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "processNotes": {
            "type": "string"
          }
        }
      }
    }
  }
}
