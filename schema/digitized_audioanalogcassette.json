{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Digitized Audio Analog Cassette Schema",
  "id": "digitized_audioanalogcassette",
  "description": "Definitions for audio analog cassette fields",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "asset",
    "bibliographic",
    "technical",
    "source",
    "digitizationProcess",
    "digitizer"
  ],
  "properties": {
    "asset": { "$ref": "fields#asset" },
    "bibliographic": { "$ref": "fields#bibliographic" },
    "technical": { "$ref": "fields#technical" },
    "source": {
      "id": "source",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "object",
        "subObject",
        "physicalDescription",
        "audioRecording"
      ],
      "properties": {
        "object": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "format",
            "volumeNumber"
          ],
          "properties": {
            "type": {
              "enum": [ "audio analog cassette" ]
            },
            "format": {
              "enum": [
                "compact cassette",
                "microcassette",
                "minicassette"
              ]
            },
            "generation": {
              "enum": [
                "unknown",
                1,
                2,
                3
              ]
            },
            "volumeNumber": {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "subObject": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "faceNumber"
          ],
          "properties": {
            "faceNumber": {
              "type": "number",
              "multipleOf": 1.0
            },
            "regionNumber": {
              "type": "number",
              "multipleOf": 1.0
            },
            "streamNumber": {
              "type": "number",
              "multipleOf": 1.0
            },
            "partNumber": {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "physicalDescription": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "stockManufacturer",
            "stockProductID",
            "tapeWidth",
            "tapeThickness",
            "baseMaterial",
            "oxideMaterial"
          ],
          "properties": {
            "stockLength": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "type": "number",
                  "multipleOf": 1.0
                },
                "unit": {
                  "enum": [
                    "min"
                  ]
                }
              }
            },
            "stockProductID": {
              "type": "string"
            },
            "stockManufacturer": {
              "type": "string"
            },
            "tapeWidth": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    0.125
                  ]
                },
                "unit": {
                  "enum": [
                    "in"
                  ]
                }
              }
            },
            "tapeThickness": {
              "properties": {
                "measure": {
                  "type": "number",
                  "multipleOf": 0.5
                },
                "unit": {
                  "enum": [
                    "mils"
                  ]
                }
              }
            },
            "baseMaterial": {
              "enum": [
                "acetate",
                "polyester",
                "PVC",
                "paper"
              ]
            },
            "oxideMaterial": {
              "enum": [
                "ferric",
                "chromium",
                "ferrichrome",
                "metal",
                "unknown"
              ]
            },
            "backcoatMaterial": {
              "enum": [
                "yes",
                "no"
              ]
            }
          }
        },
        "audioRecording": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "audioSoundField",
            "numberOfAudioTracks",
            "trackConfiguration",
            "designatedSpeed",
            "designatedNoiseReduction",
            "designatedEQ"
          ],
          "properties": {
            "audioSoundField": {
              "enum": [
                "stereo",
                "mono",
                "surround",
                "quadrophonic",
                "binaural"
              ]
            },
            "numberOfAudioTracks": {
              "enum": [
                4,
                "n/a"
              ]
            },
            "trackConfiguration": {
              "enum": [
                "full-track",
                "half-track",
                "two-track",
                "quarter-track",
                "four-track"
              ]
            },
            "designatedSpeed": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    3.75,
                    1.875,
                    0.9375,
                    "not specified"
                  ]
                },
                "unit": {
                  "enum": [
                    "ips"
                  ]
                }
              }
            },
            "designatedNoiseReduction": {
              "enum": [
                "Dolby B",
                "Dolby C",
                "not specified"
              ]
            },
            "designatedEQ": {
              "enum": [
                "Type I",
                "Type II",
                "Type III",
                "Type IV",
                "not specified"
              ]
            }
          }
        },
        "notes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "physicalConditionPreShipNotes": {
              "type": "string"
            },
            "physicalConditionDigitizationNotes": {
              "type": "string"
            }
          }
        }
      }
    },
    "digitizationProcess" : {
      "id": "digitizationProcess",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "playbackDevice",
        "captureSoftware"
      ],
      "properties": {
        "playbackDevice": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model",
            "tapeHeadType",
            "eq",
            "speed"
          ],
          "properties": {
            "id":  {
              "$ref": "fields#playbackDeviceID"
            },
            "serialNumber": {
              "$ref": "fields#playbackDeviceSerialNumber"
            },
            "manufacturer": {
              "$ref": "fields#playbackDeviceManufacturer"
            },
            "model": {
              "$ref": "fields#playbackDeviceModel"
            },
            "tapeHeadType": {
              "enum": [
                "full-track",
                "half-track",
                "two-track",
                "quarter-track",
                "three-track",
                "four-track",
                "eight-track",
                "sixteen-track",
                "twenty-four-track"
              ]
            },
            "noiseReduction": {
              "enum": [
                "Dolby B",
                "Dolby C",
                "not specified",
                "n/a"
              ]
            },
            "eq": {
              "enum": [
                "Type I",
                "Type II",
                "Type III",
                "Type IV"
              ]
            },
            "speed": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "measure",
                "unit"
              ],
              "properties": {
                "measure": {
                  "enum": [
                    3.75,
                    1.875,
                    0.9375
                  ]
                },
                "unit": {
                  "enum": [
                    "ips"
                  ]
                }
              }
            }
          }
        },
        "analogDigitalConverter": {
          "$ref": "#analogDigitalConverter"
        },
        "captureSoftware": {
          "$ref": "fields#captureSoftware"
        },
        "take": {
          "$ref": "fields#take"
        },
        "notes": {
          "$ref": "fields#processNotes"
        }
      }
    },
    "digitizer": { "$ref": "fields#digitizer" }
  }
}
