{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Digitized Video Optical Schema",
  "id": "digitized_videooptical",
  "description": "Definitions for video optical fields",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "asset",
    "bibliographic",
    "technical",
    "source",
    "digitizationProcess",
    "digitizer"
  ],
  "properties": {
    "asset": { "$ref": "fields#asset" },
    "bibliographic": { "$ref": "fields#bibliographic" },
    "technical": { "$ref": "fields#technical" },
    "source": {
      "id": "source",
      "type": "object",
      "additionalProperties": true,
      "required": [
        "object",
        "subObject",
        "stock",
        "contentSpecifications",
        "audioRecording"
      ],
      "properties": {
        "object": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "format",
            "volumeNumber"
          ],
          "properties": {
            "type": {
              "enum": [ "video optical" ]
            },
            "format": {
              "enum": [
                "DVD",
                "DVD-R",
                "DVD+R",
                "DVD-RW",
                "DVD+RW",
                "DVD-RAM",
                "BD",
                "BD-R",
                "VCD"]
            },
            "generation": {
              "enum": [
                "unknown",
                "Master",
                "Preservation Master",
                "Copy",
                "Unknown"
              ]
            },
            "volumeNumber": {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "subObject": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "faceNumber": {
              "type": "number",
              "multipleOf": 1.0
            },
            "regionNumber": {
              "type": "number",
              "multipleOf": 1.0
            },
            "partNumber": {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "stock": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "stockManufacturer",
            "discDiameter",
            "dyeLayer",
            "reflectiveLayer",
            "dataCapacity"
          ],
          "properties": {
            "stockManufacturer": {
              "type": "string"
            },
            "discDiameter": {
              "enum": [
                4.7,
                3.1
              ]
            },
            "dyeLayer": {
              "enum": [
                "phthalocyanine",
                "cyanine",
                "azo"
              ]
            },
            "reflectiveLayer": {
              "enum": [
                "gold",
                "silver",
                "aluminum"
              ]
            },
            "dataCapacity": {
              "enum": [
                0.7,
                4.7,
                8.54,
                25,
                50
              ]
            }
          }
        },
        "contentSpecifications": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "broadcastStandard",
            "colorBW",
            "regionCode"
          ],
          "properties": {
            "broadcastStandard": {
              "enum": [
                "NTSC",
                "PAL",
                "SECAM"
              ]
            },
            "colorBW": {
              "enum": [
                "b/w",
                "color",
                "color & b/w"
              ]
            },
            "regionCode": {
              "enum": [
                0,
                1,
                2,
                3,
                4,
                5,
                6,
                7,
                8,
                "A",
                "B"
              ]
            }
          }
        },
        "audioRecording": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "audioSoundField",
            "numberOfAudioTracks"
          ],
          "properties": {
            "audioSoundField": {
              "enum": [
                "stereo",
                "mono",
                "surround",
                "quadrophonic",
                "binaural"
              ]
            },
            "numberOfAudioTracks": {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "notes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "physicalConditionPreShipNotes": {
              "type": "string"
            },
            "physicalConditionDigitizationNotes": {
              "type": "string"
            }
          }
        }
      }
    },
    "digitizationProcess" : {
      "id": "digitizationProcess",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "playbackDevice",
        "captureSoftware"
      ],
      "properties": {
        "playbackDevice": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "playbackDeviceSerialNumber",
            "playbackDeviceManufacturer",
            "playbackDeviceModel"
          ],
          "properties": {
            "playbackDeviceID":  {
              "type": ["string", "number"]
            },
            "playbackDeviceSerialNumber": {
              "type": ["string", "number"]
            },
            "playbackDeviceManufacturer": {
              "type": "string"
            },
            "playbackDeviceModel": {
              "type": "string"
            }
          }
        },
        "captureSoftware": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "captureSoftwareManufacturer",
            "captureSoftwareProductName",
            "captureSoftwareVersion",
            "captureSoftwarePlatform"
          ],
          "properties": {
            "captureSoftwareManufacturer": {
              "type": "string"
            },
            "captureSoftwareProductName": {
              "type": "string"
            },
            "captureSoftwareVersion": {
              "type": "string"
            },
            "captureSoftwarePlatform": {
              "type": "string"
            }
          }
        },
        "notes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "processNotes": {
              "type": "string"
            }
          }
        }
      }
    },
    "digitizer": { "$ref": "fields#digitizer" }
  }
}
