{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "AMI Vendor Audio Digital Cassette Schema",
  "id": "digitized_audiodigitalcassette",
  "description": "Definitions for audio digital cassette fields",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "asset",
    "bibliographic",
    "technical",
    "source",
    "digitizationProcess",
    "digitizer"
  ],
  "properties": {
    "asset": { "$ref": "fields#asset" },
    "bibliographic": { "$ref": "fields#bibliographic" },
    "technical": { "$ref": "fields#technical" },
    "source": {
      "id": "source",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "object",
        "subObject",
        "stock",
        "audioRecording"
      ],
      "properties": {
        "object": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "format",
            "volumeNumber"
          ],
          "properties": {
            "type": {
              "enum": [ "audio digital cassette" ]
            },
            "format": {
              "enum": [
                "DAT cassette",
                "Digital Compact Cassette",
                "F1 Audio (Betamax)",
                "PCM-1630 (U-Matic)"
              ]
            },
            "generation": {
              "enum": [
                "unknown",
                1,
                2,
                3
              ]
            },
            "volumeNumber": {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "subObject": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "faceNumber"
          ],
          "properties": {
            "faceNumber": {
              "type": "number",
              "multipleOf": 1.0
            },
            "regionNumber": {
              "type": "number",
              "multipleOf": 1.0
            },
            "streamNumber": {
              "type": "number",
              "multipleOf": 1.0
            },
            "partNumber": {
              "type": "number",
              "multipleOf": 1.0
            }
          }
        },
        "stock": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "stockManufacturer",
            "stockProductID",
            "tapeWidth",
            "tapeThickness",
            "baseMaterial",
            "oxideMaterial"
          ],
          "properties": {
            "stockLength": {
              "properties": {
                "measure": {
                  "type": "number",
                  "multipleOf": 1.0
                },
                "unit": {
                  "enum": [
                    "min"
                  ]
                }
              }
            },
            "stockProductID": {
              "type": "string"
            },
            "stockManufacturer": {
              "type": "string"
            },
            "tapeWidth": {
              "properties": {
                "measure": {
                  "enum": [
                    0.25
                  ]
                },
                "unit": {
                  "enum": [
                    "in"
                  ]
                }
              }
            },
            "tapeThickness": {
              "properties": {
                "measure": {
                  "type": "number",
                  "multipleOf": 1.0
                },
                "unit": {
                  "enum": [
                    "mils"
                  ]
                }
              }
            },
            "baseMaterial": {
              "enum": [
                "acetate",
                "polyester",
                "PVC",
                "paper"
              ]
            },
            "oxideMaterial": {
              "enum": [
                "ferric",
                "chromium",
                "ferrichrome",
                "metal",
                "unknown"
              ]
            },
            "backcoatMaterial": {
              "enum": [
                "yes",
                "no"
              ]
            }
          }
        },
        "audioRecording": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "audioSoundField",
            "numberOfAudioTracks",
            "trackConfiguration",
            "designatedSpeed",
            "audioBitDepth",
            "audioSamplingRate"
          ],
          "properties": {
            "audioSoundField": {
              "enum": [
                "stereo",
                "mono",
                "surround",
                "quadrophonic",
                "binaural"
              ]
            },
            "numberOfAudioTracks": {
              "enum": [
                4,
                "n/a"
              ]
            },
            "trackConfiguration": {
              "enum": [
                "full-track",
                "half-track",
                "two-track",
                "quarter-track",
                "four-track"
              ]
            },
            "designatedSpeed": {
              "enum": [
                ".3209 (Standard)",
                ".16043 (Long Play)",
                "not specified"
              ]
            },
            "audioBitDepth": {
              "properties": {
                "measure": {
                  "enum": [
                    8,
                    16,
                    18,
                    20,
                    24,
                    32
                  ]
                },
                "unit": {
                  "enum": [
                    "bit"
                  ]
                }
              }
            },
            "audioSamplingRate": {
              "properties": {
                "measure": {
                  "enum": [
                    22500,
                    32000,
                    44056,
                    44100,
                    47925,
                    48000,
                    64000,
                    88000,
                    88112,
                    88200,
                    95904,
                    96000,
                    128000,
                    176224,
                    176400,
                    191808,
                    192000
                  ]
                },
                "unit": {
                  "enum": [
                    "hz"
                  ]
                }
              }
            }
          }
        },
        "notes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "physicalConditionPreShipNotes": {
              "type": "string"
            },
            "physicalConditionDigitizationNotes": {
              "type": "string"
            }
          }
        }
      }
    },
    "digitizationProcess" : {
      "id": "digitizationProcess",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "playbackDevice",
        "captureSoftware"
      ],
      "properties": {
        "playbackDevice": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "serialNumber",
            "manufacturer",
            "model",
            "speed"
          ],
          "properties": {
            "id":  {
              "$ref": "fields#playbackDeviceID"
            },
            "serialNumber": {
              "$ref": "fields#playbackDeviceSerialNumber"
            },
            "manufacturer": {
              "$ref": "fields#playbackDeviceManufacturer"
            },
            "model": {
              "$ref": "fields#playbackDeviceModel"
            },
            "speed": {
              "enum": [
                ".3209 (Standard)",
                ".16043 (Long Play)",
                "not specified"
              ]
            }
          }
        },
        "captureSoftware": {
          "$ref": "fields#captureSoftware"
        },
        "notes": {
          "$ref": "fields#processNotes"
        }
      }
    },
    "digitizer": { "$ref": "fields#digitizer" }
  }
}
