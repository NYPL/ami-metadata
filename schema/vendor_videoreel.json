{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "AMI Vendor Audio Optical Partial Schema",
  "id": "vendor_videoreel",
  "description": "Definitions for audio optical fields",
  "source": {
    "id": "#source",
    "type": "object",
    "additionalProperties": true,
    "required": [
      "object",
      "subObject",
      "stock",
      "contentSpecifications",
      "audioRecording"
    ],
    "properties": {
      "object": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type",
          "format",
          "volumeNumber"
        ],
        "properties": {
          "type": {
            "enum": [ "video cassette" ]
          },
          "format": {
            "enum": [
              "3/4\" U-matic",
              "Betacam",
              "Betacam SP",
              "Betacam SX",
              "Betamax",
              "D-1",
              "D-2",
              "D-3",
              "Digital8",
              "Digital Betacam",
              "DVCam",
              "DVCPRO",
              "DVCPRO HD",
              "HDCAM",
              "HDV",
              "Hi8",
              "MII",
              "MiniDV",
              "SVHS",
              "VHS",
              "Video8"
            ]
          },
          "volumeNumber": {
            "type": "number",
            "multipleOf": 1.0
          }
        }
      },
      "subObject": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "faceNumber": {
            "type": "number",
            "multipleOf": 1.0
          },
          "regionNumber": {
            "type": "number",
            "multipleOf": 1.0
          },
          "partNumber": {
            "type": "number",
            "multipleOf": 1.0
          }
        }
      },
      "stock": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "reelDiameter",
          "stockManufactuer",
          "stockProductID",
          "tapeWidth",
          "tapeThickness",
          "baseMaterial",
          "oxideMaterial"
        ],
        "properties": {
          "reelDiameter": {
            "type": "number",
            "multipleOf": 0.5
          },
          "stockLength": {
            "type": "number",
            "multipleOf": 1.0
          },
          "stockManufactuer": {
            "enum": [
              "3M",
              "Agfa",
              "Ampex",
              "Fuji",
              "Maxell",
              "Sony"
            ]
          },
          "stockProductID": {
            "enum": [
              "KCA-30",
              "KCA-60",
              "KCS-20"
            ]
          },
          "tapeWidth": {
            "type": "number",
            "multipleOf": 0.1
          },
          "tapeThickness": {
            "type": "number",
            "multipleOf": 1.0
          },
          "baseMaterial": {
            "enum": [
              "acetate",
              "polyester",
              "PVC",
              "paper"
            ]
          },
          "oxideMaterial": {
            "enum": [
              "ferric oxide",
              "chromium dioxide",
              "unknown"
            ]
          }
        }
      },
      "contentSpecifications": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "broadcastStandard",
          "colorBW"
        ],
        "properties": {
          "broadcastStandard": {
            "enum": [
              "NTSC",
              "PAL",
              "SECAM"
            ]
          },
          "colorBW": {
            "enum": [
              "b/w",
              "color",
              "color & b/w"
            ]
          }
        }
      },
      "audioRecording": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "audioSoundField",
          "numberOfAudioTracks"
        ],
        "properties": {
          "audioSoundField": {
            "enum": [
              "stereo",
              "mono",
              "surround"
            ]
          },
          "numberOfAudioTracks": {
            "type": "number",
            "multipleOf": 1.0
          }
        }
      },
      "notes": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "physicalConditionPreShipNotes": {
            "type": "string"
          },
          "physicalConditionDigitizationNotes": {
            "type": "string"
          }
        }
      }
    }
  },
  "digitizationProcess" : {
    "id": "#digitizationProcess",
    "type": "object",
    "additionalProperties": false,
    "required": [
      "playbackDevice",
      "timeBaseCorrector",
      "captureSoftware"
    ],
    "properties": {
      "playbackDevice": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "playbackDeviceSerialNumber",
          "playbackDeviceManufacturer",
          "playbackDeviceModel"
        ],
        "properties": {
          "playbackDeviceID":  {
            "type": ["string", "number"]
          },
          "playbackDeviceSerialNumber": {
            "type": ["string", "number"]
          },
          "playbackDeviceManufacturer": {
            "type": "string"
          },
          "playbackDeviceModel": {
            "type": "string"
          }
        }
      },
      "timeBaseCorrector": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "timeBaseCorrectorSerialNumber",
          "timeBaseCorrectorManufacturer",
          "timeBaseCorrectorModel"
        ],
        "properties": {
          "timeBaseCorrectorID":  {
            "type": ["string", "number"]
          },
          "timeBaseCorrectorSerialNumber": {
            "type": ["string", "number"]
          },
          "timeBaseCorrectorManufacturer": {
            "type": "string"
          },
          "timeBaseCorrectorModel": {
            "type": "string"
          }
        }
      },
      "analogDigitalConverter": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "analogDigitalConverterID":  {
            "type": ["string", "number"]
          },
          "analogDigitalConverterSerialNumber": {
            "type": ["string", "number"]
          },
          "analogDigitalConverterManufacturer": {
            "type": "string"
          },
          "analogDigitalConverterModel": {
            "type": "string"
          }
        }
      },
      "captureSoftware": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "captureSoftwareManufacturer",
          "captureSoftwareProductName",
          "captureSoftwareVersion",
          "captureSoftwarePlatform"
        ],
        "properties": {
          "captureSoftwareManufacturer": {
            "type": "string"
          },
          "captureSoftwareProductName": {
            "type": "string"
          },
          "captureSoftwareVersion": {
            "type": "string"
          },
          "captureSoftwarePlatform": {
            "type": "string"
          }
        }
      },
      "take": {
        "type": "object",
        "properties": {
          "takeNumber" : {
            "type": "number",
            "multipleOf": 1.0
          }
        }
      },
      "notes": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "processNotes": {
            "type": "string"
          }
        }
      }
    }
  }
}
